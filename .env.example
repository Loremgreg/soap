# =============================================================================
# SOAP Notice - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to git!

# -----------------------------------------------------------------------------
# Database (Neon PostgreSQL - EU Frankfurt)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/dbname?sslmode=require

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
# Options: development, staging, production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Backend URL
API_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# Google OAuth (Story 1.2)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Deepgram - Speech-to-Text (Story 2.3)
DEEPGRAM_API_KEY=

# Mistral AI - SOAP Note Generation (Story 3.1)
MISTRAL_API_KEY=

# LLM Provider (mistral or azure_openai)
LLM_PROVIDER=mistral

# Azure OpenAI (alternative to Mistral)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# -----------------------------------------------------------------------------
# Payments (Story 7.2)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Frontend-specific (prefix with VITE_ for Vite to expose)
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_SENTRY_DSN=
