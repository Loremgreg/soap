# Application
APP_ENV=development
DEBUG=true

# Server
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://localhost/soap_notice

# Google OAuth - REMPLACER PAR TES VALEURS
GOOGLE_CLIENT_ID=ton-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-ton-secret

# JWT - Genere une cle securisee (min 32 caracteres)
JWT_SECRET_KEY=change-me-to-a-very-secure-random-string-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Session Secret (pour OAuth state)
SESSION_SECRET_KEY=another-secure-random-string-for-session-management

# External Services - Deepgram (transcription audio)
# Obtenir une cle API sur: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_MODEL=nova-3
DEEPGRAM_LANGUAGE=multi

# External Services - LLM (extraction SOAP)
MISTRAL_API_KEY=
LLM_PROVIDER=mistral

# Payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Monitoring
SENTRY_DSN=
